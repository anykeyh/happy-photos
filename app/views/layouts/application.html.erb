<!DOCTYPE html>
<html>
<head>
  <title>HappyPhotos</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar navbar-inverse action-bar" id="top-bar">
    <div class="navbar-inner">
      <a class="brand" href="/" onclick="false;">Happy Photos 1.0</a>
      <div class="container">
        <ul class="nav">
        <%= yield :action_bar %>
        <% if is_logged? %>
          <%= action_link "Se deconnecter", access_logout_path %>
        <% end %>
      </ul>
      </div>
    </div>
  </div>
  <div id="top-bar-faker"></div>

  <div>
    <%= flash[:error] unless flash[:error].nil? %>
    <%= flash[:warning] unless flash[:warning].nil? %>
    <%= flash[:notice] unless flash[:notice].nil? %>
  </div>


  <div class="row-fluid">
    <div class="container">
      <%= yield %>
    </div>
  </div>
</body>
</html>
